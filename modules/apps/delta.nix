{
  # Syntax-highlighting pager for git
  delta = {
    enable = true;
    enableGitIntegration = true;
    options = {
      navigate = true; # use n and N to move between diff sections
      dark = true;
      line-numbers = true;
      side-by-side = true;
      whitespace-error-style = "22 reverse";
    };
  };
}
